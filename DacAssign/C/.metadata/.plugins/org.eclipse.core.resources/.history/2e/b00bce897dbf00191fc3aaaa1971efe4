#include <stdio.h>

int main(void) {
	char ch,choice;
	printf("Enter choice");
	scanf("%c", &choice);
	while(choice == 'y')
	{
		printf("Enter character");
		scanf("%c", &ch);
		printf("\nEntered character %c", ch);
	}
	puts("\n test  character"); /* prints test  character */
	return 0;
}
