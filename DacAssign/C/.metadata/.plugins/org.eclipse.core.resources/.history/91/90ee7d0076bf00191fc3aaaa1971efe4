#include <stdio.h>
#include <stdlib.h>

int main(void)
{
	if(0,8,0)//1
	printf("\nhello");
	else
	printf("\nbye bye");
	if(0,8,1)//2
		printf("\nhello");
		else
		printf("\nbye bye");
	if(0,8,-1)//3
		printf("\nhello");
		else
		printf("\nbye bye");
}
